{
  "builders": [
    {
      "azure_tags": {
        "dept": "engineering"
      },
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "image_offer": "UbuntuServer",
      "image_publisher": "Canonical",
      "image_sku": "18.04-LTS",
      "location": "UK South",
      "os_type": "Linux",
      "managed_image_resource_group_name": "packer-provision",
      "managed_image_name": "feedibus-production-baseimage",
      "subscription_id": "{{user `subscription_id`}}",
      "tenant_id": "{{user `tenant_id`}}",
      "type": "azure-arm",
      "vm_size": "Standard_B1ms",
      "async_resourcegroup_delete": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "packer/scripts/enable-ansible.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/site.yml",
      "role_paths": [
        "ansible/roles/docker",
        "ansible/roles/certbot",
        "ansible/roles/initial-script"
      ]
    },
    {
      "type": "shell",
      "script": "packer/scripts/enable-docker-compose.sh"
    },
    {
      "type": "shell",
      "script": "packer/scripts/remove-ansible.sh"
    }
  ],
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "tenant_id": "{{env `ARM_TENANT_ID`}}"
  }
}
